<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailsCandidate.DetailsCandidateFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:fitsSystemWindows="true"
        app:liftOnScroll="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="Candidate"
            app:titleTextAppearance="@style/TextAppearance.Material3.ActionBar.Title"
            app:layout_scrollEffect="compress"
            app:menu="@menu/menu_topbar_detailscandidate"
            app:navigationIcon="@drawable/baseline_arrow_back_24" />

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Scrollable content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!-- Candidate bck  photo -->
            <ImageView
                android:id="@+id/details_photo_imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="TODO"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_pic_a"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!--Call button -->
            <ImageButton
                android:id="@+id/call_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_button_with_icon"
                android:contentDescription="TODO"
                android:elevation="2dp"
                android:padding="0dp"
                android:src="@drawable/phone"
                app:cornerRadius="28dp"
                app:iconTint="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/sms_button"
                app:layout_constraintTop_toTopOf="@+id/sms_button"
                app:tint="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appel"
                style="@style/TextAppearance.Material3.LabelMedium"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintEnd_toEndOf="@+id/call_button"
                app:layout_constraintStart_toStartOf="@+id/call_button"
                app:layout_constraintTop_toBottomOf="@+id/call_button" />

            <!--SMS button -->
            <ImageButton
                android:id="@+id/sms_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="TODO"
                android:padding="0dp"
                android:elevation="2dp"
                app:cornerRadius="28dp"
                app:iconTint="@color/white"
                android:src="@drawable/outline_message_24"
                app:tint="@color/black"
                app:rippleColor="@color/primary"
                android:background="@drawable/round_button_with_icon"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/details_photo_imageView"/>
            <TextView
                android:id="@+id/sms_button_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMS"
                style="@style/TextAppearance.Material3.LabelMedium"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintEnd_toEndOf="@+id/sms_button"
                app:layout_constraintStart_toStartOf="@+id/sms_button"
                app:layout_constraintTop_toBottomOf="@+id/sms_button" />

            <!--Mail button -->
            <ImageButton
                android:id="@+id/mail_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/round_button_with_icon"
                android:contentDescription="TODO"
                android:elevation="2dp"
                android:padding="0dp"
                android:src="@drawable/mail"
                app:cornerRadius="28dp"
                app:iconTint="@color/white"
                app:layout_constraintStart_toEndOf="@+id/sms_button"
                app:layout_constraintTop_toTopOf="@+id/sms_button"
                app:tint="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                style="@style/TextAppearance.Material3.LabelMedium"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintEnd_toEndOf="@+id/mail_button"
                app:layout_constraintStart_toStartOf="@+id/mail_button"
                app:layout_constraintTop_toBottomOf="@+id/mail_button" />



            <!-- Birthday info -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/birthday_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                style="?attr/materialCardViewElevatedStyle"
                app:layout_constraintTop_toBottomOf="@id/sms_button_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- title -->
                    <TextView
                        android:id="@+id/birthday_section_title"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A propos"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="26dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <!-- BirthDate -->
                    <TextView
                        android:id="@+id/birthday_date_textView"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="46dp"
                        android:text="dd/mm/yyyy (xx ans)"
                        app:layout_constraintStart_toStartOf="@+id/birthday_section_title"
                        app:layout_constraintTop_toBottomOf="@id/birthday_section_title" />

                    <TextView
                        style="@style/TextAppearance.Material3.LabelSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="26dp"
                        android:text="Anniversaire"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/birthday_date_textView"
                        app:layout_constraintTop_toBottomOf="@id/birthday_date_textView" />

                </androidx.constraintlayout.widget.ConstraintLayout>



            </com.google.android.material.card.MaterialCardView>

            <!-- salary info -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/salary_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                style="?attr/materialCardViewElevatedStyle"
                app:layout_constraintTop_toBottomOf="@id/birthday_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- title -->
                    <TextView
                        android:id="@+id/salary_section_title"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pretentions salariales"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="26dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <!-- salary -->
                    <TextView
                        android:id="@+id/salary_textView"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="46dp"
                        android:text="0000 €"
                        app:layout_constraintStart_toStartOf="@+id/salary_section_title"
                        app:layout_constraintTop_toBottomOf="@id/salary_section_title" />
                    <!-- convertion -->
                    <TextView
                        android:id="@+id/salary_convertion_textView"
                        style="@style/TextAppearance.Material3.LabelMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="46dp"
                        android:layout_marginBottom="26dp"
                        android:text="soit $ 0000.0  "
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/salary_textView"
                        app:layout_constraintTop_toBottomOf="@id/salary_textView" />

                </androidx.constraintlayout.widget.ConstraintLayout>



            </com.google.android.material.card.MaterialCardView>

            <!-- notes info -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/notes_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                style="?attr/materialCardViewElevatedStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="70dp"
                app:layout_constraintTop_toBottomOf="@id/salary_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- title -->
                    <TextView
                        android:id="@+id/notes_section_title"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notes"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="26dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <!-- notes -->
                    <TextView
                        android:id="@+id/notes_textView"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="46dp"
                        android:layout_marginBottom="46dp"
                        android:layout_marginEnd="16dp"
                        tools:text="@tools:sample/lorem/random"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/notes_section_title"
                        app:layout_constraintTop_toBottomOf="@id/notes_section_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>



            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>