<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addCandidate.AddCandidateFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/addCandidate_app_bar"
        android:elevation="2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:visibility="visible"
            android:id="@+id/addCandidate_toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="2dp"
            style="@style/Widget.Material3.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:title="Ajouter un candidat"
            app:titleTextAppearance="@style/TextAppearance.Material3.ActionBar.Title" />


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/addCandidate_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addCandidate_app_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--Photos blurp background -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/candidate_imageView_background"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_pic_biggrey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!-- Candidate photo -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/candidate_mini_imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="25dp"
                android:background="#ffffff"
                android:contentDescription="TODO"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_pic_b"
                app:layout_constraintBottom_toTopOf="@+id/firstname_edit_text_layout"
                app:layout_constraintEnd_toEndOf="@+id/candidate_imageView_background"
                app:layout_constraintStart_toStartOf="@+id/candidate_imageView_background"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="4dp" />


            <!-- first name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstname_edit_text_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="95dp"
                android:layout_marginEnd="24dp"
                android:hint="Prenom"
                app:boxStrokeColor="@color/primary"
                app:endIconDrawable="@drawable/baseline_check_24"
                app:endIconMode="custom"
                app:endIconTint="@color/valid_text_color"
                app:errorEnabled="true"
                app:helperTextEnabled="true"
                app:hintTextColor="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/candidate_imageView_background">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstname_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>
            <!-- last name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastname_edit_text_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Nom"
                app:boxStrokeColor="@color/primary"
                app:endIconDrawable="@drawable/baseline_check_24"
                app:endIconMode="custom"
                app:endIconTint="@color/valid_text_color"
                app:errorEnabled="true"
                app:helperTextEnabled="true"
                app:hintTextColor="@color/primary"
                app:layout_constraintEnd_toEndOf="@+id/firstname_edit_text_layout"
                app:layout_constraintStart_toStartOf="@+id/firstname_edit_text_layout"
                app:layout_constraintTop_toBottomOf="@+id/firstname_edit_text_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lastname_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>
            <!-- icon name section -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:contentDescription="TODO"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/people"
                app:layout_constraintEnd_toStartOf="@+id/firstname_edit_text_layout"
                app:layout_constraintTop_toTopOf="@+id/firstname_edit_text_layout"
                app:tint="@color/material_on_background_emphasis_high_type" />


            <!-- phone -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_edit_text_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Telephone"
                app:boxStrokeColor="@color/primary"
                app:endIconDrawable="@drawable/baseline_check_24"
                app:endIconMode="custom"
                app:endIconTint="@color/valid_text_color"
                app:errorEnabled="true"
                app:helperTextEnabled="true"
                app:hintTextColor="@color/primary"
                app:layout_constraintEnd_toEndOf="@+id/lastname_edit_text_layout"
                app:layout_constraintStart_toStartOf="@+id/lastname_edit_text_layout"
                app:layout_constraintTop_toBottomOf="@+id/lastname_edit_text_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>
            <!-- icon phone section -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:contentDescription="TODO"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/phone"
                app:layout_constraintEnd_toStartOf="@+id/phone_edit_text_layout"
                app:layout_constraintTop_toTopOf="@+id/phone_edit_text_layout"
                app:tint="@color/material_on_background_emphasis_high_type" />


            <!-- mail -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mail_edit_text_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Email"
                app:boxStrokeColor="@color/primary"
                app:endIconDrawable="@drawable/baseline_check_24"
                app:endIconMode="custom"
                app:endIconTint="@color/valid_text_color"
                app:errorEnabled="true"
                app:helperTextEnabled="true"
                app:hintTextColor="@color/primary"
                app:layout_constraintEnd_toEndOf="@+id/phone_edit_text_layout"
                app:layout_constraintStart_toStartOf="@+id/phone_edit_text_layout"
                app:layout_constraintTop_toBottomOf="@+id/phone_edit_text_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mail_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>
            <!-- icon mail section -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:contentDescription="TODO"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/mail"
                app:layout_constraintEnd_toStartOf="@+id/mail_edit_text_layout"
                app:layout_constraintTop_toTopOf="@+id/mail_edit_text_layout"
                app:tint="@color/material_on_background_emphasis_high_type" />


            <!-- Birthday-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/birthday_cardview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="?attr/materialCardViewElevatedStyle"
                android:clickable="true"
                android:focusable="true"
                android:checkable="true"
                app:layout_constraintEnd_toEndOf="@+id/mail_edit_text_layout"
                app:layout_constraintStart_toStartOf="@+id/mail_edit_text_layout"
                app:layout_constraintTop_toBottomOf="@+id/mail_edit_text_layout">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!-- -->
                    <TextView
                        android:id="@+id/birthday_textview_title"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/birthday_picker_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />



                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:dividerInsetEnd="16dp"
                        app:dividerInsetStart="16dp"
                        app:layout_constraintTop_toBottomOf="@id/birthday_textview_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/birthday_input_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:hint="Date"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider_birthday">

                        <com.google.android.material.textfield.TextInputEditText
                            android:clickable="false"
                            android:focusable="false"
                            android:text="jj/mm/aaaa"
                            android:id="@+id/birthday_input_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date" />

                    </com.google.android.material.textfield.TextInputLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
            <!-- icon birthday section -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:contentDescription="TODO"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/cake"
                app:layout_constraintEnd_toStartOf="@+id/birthday_cardview"
                app:layout_constraintTop_toTopOf="@+id/birthday_cardview"
                app:tint="@color/material_on_background_emphasis_high_type" />



            <!-- salary-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/salary_edit_text_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Pretentions salariales"
                app:boxStrokeColor="@color/primary"
                app:endIconDrawable="@drawable/baseline_check_24"
                app:endIconMode="custom"
                app:endIconTint="@color/valid_text_color"
                app:errorEnabled="true"
                app:helperTextEnabled="true"
                app:hintTextColor="@color/primary"
                app:layout_constraintEnd_toEndOf="@+id/birthday_cardview"
                app:layout_constraintStart_toStartOf="@+id/birthday_cardview"
                app:layout_constraintTop_toBottomOf="@+id/birthday_cardview">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/salary_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>
            <!-- icon salary section -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:contentDescription="TODO"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/attach_money_"
                app:layout_constraintEnd_toStartOf="@+id/salary_edit_text_layout"
                app:layout_constraintTop_toTopOf="@+id/salary_edit_text_layout"
                app:tint="@color/material_on_background_emphasis_high_type" />

            <!--Note -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/note_edit_text_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Notes"
                android:minHeight="175dp"
                app:boxStrokeColor="@color/primary"
                app:endIconDrawable="@drawable/baseline_check_24"
                app:endIconMode="custom"
                app:endIconTint="@color/valid_text_color"
                app:errorEnabled="true"
                app:helperTextEnabled="true"
                app:helperText="Taille limite"
                app:counterEnabled="true"
                app:counterMaxLength="350"
                app:hintTextColor="@color/primary"
                app:layout_constraintEnd_toEndOf="@+id/salary_edit_text_layout"
                app:layout_constraintStart_toStartOf="@+id/salary_edit_text_layout"
                app:layout_constraintTop_toBottomOf="@+id/salary_edit_text_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/note_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="175dp"
                    android:gravity="top"
                    android:inputType="textMultiLine"

                    />

            </com.google.android.material.textfield.TextInputLayout>
            <!-- icon note section -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:contentDescription="TODO"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/edit"
                app:layout_constraintEnd_toStartOf="@+id/note_edit_text_layout"
                app:layout_constraintTop_toTopOf="@+id/note_edit_text_layout"
                app:tint="@color/material_on_background_emphasis_high_type" />

            <!-- save button  -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/candidate_save_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="25dp"
                android:text="Sauvegarder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/note_edit_text_layout" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>