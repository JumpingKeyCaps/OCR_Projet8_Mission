<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:paddingStart="16dp"
    android:paddingEnd="24dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?attr/selectableItemBackground"
    style="@style/Theme.Material3.DayNight"

    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/favorite_photo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/favorite_first_names"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/favorite_photo"
        app:layout_constraintTop_toTopOf="@+id/favorite_photo"
        tools:text="@tools:sample/first_names" />

    <TextView
        android:id="@+id/favorite_last_names"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@+id/favorite_first_names"
        app:layout_constraintStart_toEndOf="@+id/favorite_first_names"
        app:layout_constraintTop_toTopOf="@+id/favorite_first_names"
        tools:text="@tools:sample/last_names" />

    <TextView
        android:id="@+id/favorite_note"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="#49454F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/favorite_photo"
        app:layout_constraintTop_toBottomOf="@+id/favorite_last_names"
        tools:text="@tools:sample/lorem/random" />

</androidx.constraintlayout.widget.ConstraintLayout>